<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

  <!-- === Properties === -->
  <springProperty name="env.logging.dir" source="env.logging.dir"/>
  <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n"/>

  <!-- === Appenders === -->

  <!-- Console (JVM stdout) -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- Main log file: captures everything from DEBUG up -->
  <appender name="MAIN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${env.logging.dir}/serverShell.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${env.logging.dir}/serverShell.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- Error-only log file: captures only ERROR level -->
  <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${env.logging.dir}/serverShell-error.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${env.logging.dir}/serverShell-error.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
    <!-- Only capture ERROR level and above -->
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>ERROR</level>
    </filter>
  </appender>

  <!-- === Root logger: captures everything === -->
  <root level="DEBUG">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="MAIN_FILE"/>
    <appender-ref ref="ERROR_FILE"/>
  </root>

</configuration>